enum CategoryType {
  INCOME
  EXPENSE
}

model Category {
  id          String       @id @default(uuid())
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
  type        CategoryType
  name        String
  description String?
  Expense     Expense[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("categories")
}
