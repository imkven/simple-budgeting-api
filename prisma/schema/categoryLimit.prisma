enum CategoryLimitType {
  MONTHLY // For income and expense
  WEEKLY // For income and expense
  GOAL // Only for Saving Category
}

model CategoryLimit {
  id         String            @id @default(uuid())
  category   Category          @relation(fields: [categoryId], references: [id])
  categoryId String
  user       User              @relation(fields: [userId], references: [id])
  userId     String
  type       CategoryLimitType
  amount     Decimal
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  @@unique([categoryId, userId, type])
  @@map("category_limits")
}
